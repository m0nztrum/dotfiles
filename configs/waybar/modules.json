{
    "clock": {
        "format": "󰥔 {:%H:%M}",
        "interval": 1,
        "format-alt": "󰥔  {:%H:%M   %Y, %d %B, %a}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "hyprland/workspaces": {
        //"format": "{icon}",
        "disable-scroll": false,
        "on-scroll-up": "hyprctl dispatch workspace -1",
        "on-scroll-down": "hyprctl dispatch workspace +1",
        "format-icons": {
            "urgent": "󰀨",
            "active": "",
            "default": ""
        }
    },

    "hyprland/window": {
        "format": "{title}",
        "max-length": 40,
        "separate-outputs": true,
        "rewrite": {
            "(.*) — firefox": "󰈹 $1",
            "(.*)firefox": "󰈹 Firefox",
            "(.*) - zsh": "> [$1]",
            "^.*~$": "󰄛 Kitty $1",
            "(.*) - mpv": "Mpv",
            "^.*v( .*|$)": " $1",
            "^.*zathura.*": "Zathura $1",
            "(.*)Visual Studio Code": "Code 󰨞"
        }
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": " ",
            "deactivated": " "
        }
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-time": "{H}hr & {m}min",
        "format-charging": "󰂄 {capacity}%",
        "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
        "interval": 1,
        "tooltip-format-charging": "{time} (󰢟 charging), at {capacity}%",
        "tooltip-format-discharging": "{time} (󱧦 discharging), at {capacity}%"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "rotate": 0,
        "format-muted": "婢{volume}%",
        "on-click": "~/.config/hypr/scripts/volume.sh --toggle",
        "on-click-right": "pavucontrol -t 3",
        "on-scroll-up": "~/.config/hypr/scripts/volume.sh --inc",
        "on-scroll-down": "~/.config/hypr/scripts/volume.sh --dec",
        "tooltip-format": "{icon} {desc} : {volume}%",
        "scroll-step": 5,
        "format-icons": {
            "headphone": " ",
            "headset": " ",
            "phone": " ",
            "portable": " ",
            "car": " ",
            "default": ["", " ", " "]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "rotate": 0,
        "format-source": " {volume}%",
        "format-source-muted": "  {volume}",
        "on-click": "~/.config/hypr/scripts/volume.sh --toggle-mic",
        "on-click-right": "pavucontrol -t 4",
        "on-scroll-up": "~/.config/hypr/scripts/volume.sh --inc",
        "on-scroll-down": "~/.config/hypr/scripts/volume.sh --dec",

        "tooltip-format": "{format_source} {source_desc}"
    },

    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": [" ", " ", " ", " ", " ", " ", " ", " ", ""],
        "on-scroll-up": "brightnessctl set 7%+",
        "on-scroll-down": "brightnessctl set 7%-",
        "tooltip-format": "{percent}% "
    },

    "tray": {
        "icon-size": 15,
        "spacing": 10
    },

    "memory": {
        "format": " {}%",
        "interval": 2,
        "on-click": "btop"
    },

    "cpu": {
        "format": " {usage}%",
        "interval": 1
    },

    "disk": {
        "format": " ~{}%",
        "path": "/home/draco"
    },

    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", ""]
    },

    "network": {
        "format-wifi": "{icon} {essid}",
        "rotate": 0,
        "format-icons": ["󰤯 ", "󰤟 ", "󰤢 ", "󰤥 ", "󰤨 "],
        "format-ethernet": "󰈁 {ifname}",
        "format-linked": " {ifname} (No IP)",
        "format-disconnected": "󰖪 ",
        "tooltip-format-wifi": "{icon} {essid}\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
        "tooltip-format-ethernet": "󰀂  {ifname}\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
        "interval": 3,
        "on-click": "nm-applet"
    },

    "mpd": {
        "max-length": 25,
        "format": "  {artist} - {title}",
        "format-paused": " {title}",
        "format-stopped": " ",
        "on-click": "mpc --quiet toggle",
        "on-click-middle": "kitty ncmpcpp",
        "on-scroll-up": "mpc --quiet prev",
        "on-scroll-down": "mpc --quiet next",
        "smooth-scrolling-threshold": 5,
        "tooltip-format": "{title} - {artist} ({elapsedTime:%M:%S}/{totalTime:%H:%M:%S})",
        "interval": 10
    },

    "power-profiles-daemon": {
        "format": "{icon} ",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": " ",
            "performance": " ",
            "balanced": " ",
            "power-saver": " "
        }
    },

    "bluetooth": {
        "format": " ",
        "format-disabled": "󰂳",
        "format-connected": "󰂱 {num_connections}",
        "tooltip-format": " {device_alias}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": " {device_alias} 󰂄{device_battery_percentage}%",
        "tooltip": true,
        "on-click": "blueman-manager"
    },

    "custom/media": {
        "format": "{icon} {}",
        "escape": true,
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": " ",
            "default": " "
        },
        "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null",
        "on-click": "playerctl --player spotify play-pause",
        "on-scroll-up": "playerctl --player spotify next",
        "on-scroll-down": "playerctl --player spotify next"
    },

    "custom/swaync": {
        "escape": true,
        "exec": "swaync-client -swb",
        "exect-if": "which swaync-client",
        "format": "{icon}",
        "format-icons": {
            "notification": "<span foreground='red'><sup></sup></span>",
            "none": " ",
            "dnd-notification": "<span foreground='red'><sup></sup></span>",
            "dnd-none": " ",
            "inhibited-notification": "<span foreground='red'><sup></sup></span>",
            "inhibited-none": " ",
            "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
            "dnd-inhibited-none": " "
        },
        "on-click": "sleep 0.1 && swaync-client -t -sw",
        "on-click-right": "sleep 0.1 && swaync-client -d -sw",
        "return-type": "json",
        "tooltip": true
    },

    "custom/wallchange": {
        "format": "",
        "exec": "echo ; echo 󰆊 switch wallpaper",
        "on-click": "~/.config/hypr/scripts/swww_randomize.sh",
        "interval": 86400, // once every day
        "tooltip": true
    },

    "custom/playerctl": {
        "format": "{icon}   ::  <span>{}</span>",
        "return-type": "json",
        "max-length": 64,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
        "on-click-middle": "playerctl play-pause",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "format-icons": {
            "Playing": "<span foreground='#B1B946'>󰝚</span>",
            "Paused": "<span foreground='#47423E'>󰝛</span>"
        }
    },

    "custom/weather": {
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/get_weather.sh Accra",
        "tooltip": true,
        "interval": 3600
    },

    "custom/cava_mviz": {
        "exec": "~/.config/waybar/scripts/waybarcava.sh",
        "format": "{}"
    },

    "custom/lock": {
        "format": "󰍁 ",
        "on-click": "hyprlock"
    },
    "custom/power": {
        "format": "⏻ ",
        "tooltip": false,
        "on-click": "wlogout"
    },

    "group/audio": {
        "orientation": "horizontal",
        "modules": ["pulseaudio", "pulseaudio#microphone"]
    },

    "group/motherboard": {
        "orientation": "horizontal",
        "modules": ["disk", "memory", "cpu"]
    },

    "group/laptop": {
        "orientation": "horizontal",
        "modules": ["backlight", "battery"]
    }
}
