{
    "vim_mode": true,
    "ui_font_size": 16,
    "buffer_font_size": 13,
    "current_line_highlight": "none",
    "enable_language_server": true,
    "vertical_scroll_margin": 8,
    "cursor_blink": false,
    "preferred_line_length": 100,
    "use_autoclose": true,
    "tab_size": 4,
    "git": {
        "inline_blame": {
            "enabled": false,
            "delay_ms": 500
        }
    },
    "theme": {
        "mode": "dark",
        "light": "Atelier Dune Light",
        "dark": "Base16 Black Metal (Bathory) Dark"
    },
    "tab_bar": {
        "show": false
    },
    "tabs": {
        "git_status": true
    },
    "language_models": {
        "anthropic": {
            "version": "1"
        }
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": false
    },
    "terminal": {
        "alternate_scroll": "off",
        "blinking": "terminal_controlled",
        "copy_on_select": true,
        "font_family": "CommitMono Nerd Font",
        "line_height": "standard",
        "toolbar": {
            "title": true
        },
        "working_directory": "current_project_directory",
        "button": false
    },

    "assistant": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-latest"
        },
        "version": "2",
        "provider": "anthropic",
        "button": true
    }
}
